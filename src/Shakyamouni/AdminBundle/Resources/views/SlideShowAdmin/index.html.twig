{% extends "::baseAdmin.html.twig" %}

{% block body_admin %}
<table class="records_list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>
                <a href="{{ path('slideshow_admin_edit', { 'id': entity.id }) }}" title="Edit"><img src="{{ asset('bundles/shakyamouniadmin/images/icons/pencil.png') }}" alt="Edit" /></a>
                <a href="{{ path('slideshow_admin_delete', { 'id': entity.id }) }}" title="Delete" class="action-delete"><img src="{{ asset('bundles/shakyamouniadmin/images/icons/cross.png') }}" alt="Delete" /></a> 
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<p>
    <a href="{{ path('slideshow_admin_new') }}" class="action-create"><button class="button">Cr√©er</button></a>
</p>

{% endblock %} 