<header id="header">

    <div class="container">

        <div class="eight columns">

            <div id="logo">
                <a href="{{ path('homepage') }}"><img style="width:80%" src="{{ asset(['uploads/logo/Logo_CBKS_CMK.png'] | join ) }}"  alt="Centre Bouddhiste Kadampa Shakyamouni"></a>
            </div><!--/ #logo-->

        </div><!--/ .columns-->

        <div class="eight columns">

            <div class="widget widget_contacts">

                <div class="vcard clearfix">

                    <p class="top-phone"><span>{{ headerInfo.phoneNumber }}</span></p>

                </div><!--/ .vcard-->

                <div class="clear"></div>

                <ul class="social-icons subcription_ul">
                    <li class="subscription_link_li"><a href="#footer" id="subscription_link_span" data-href="{{ path('subscription_popup') }}">{{ 'header.newsletter_subscription'|trans }}</a></li>
                    <li class="facebook"><a href="{{ headerInfo.facebook }}" target="_blank">Facebook</a></li>
                </ul><!--/ .social-icons -->	

            </div>

        </div><!--/ .columns-->

        <div class="clear"></div>

        {{ render(controller('ShakyamouniMenuBundle:Menu:menu')) }}

    </div><!--/ .container--> 

</header><!--/ #header-->

